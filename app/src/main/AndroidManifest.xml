<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.josecarlos.couplecounters" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.josecarlos.couplecounters.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.josecarlos.couplecounters.CounterActivity" >
        </activity>
        <activity
            android:name="com.josecarlos.couplecounters.LoginActivity"
            android:label="@string/title_activity_login" >
        </activity>
        <activity android:name="com.josecarlos.couplecounters.RegisterActivity"
            android:label="@string/title_activity_register" >
        </activity>
        <activity android:name="com.josecarlos.couplecounters.AddCounterActivity" >
        </activity>
    </application>

</manifest>
