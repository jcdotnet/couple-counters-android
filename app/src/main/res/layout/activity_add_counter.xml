<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.josecarlos.couplecounters.AddCounterActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Counter name:"
        android:textColor="#FFBFDF"
        android:id="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editCounterName"
        android:width="300dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="77dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="is a common counter? (check only if storing a single value for the couple)"
        android:id="@+id/checkCommon"
        android:layout_below="@+id/editCounterName"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Initial values (optional)"
        android:textColor="#FFBFDF"
        android:id="@+id/textView"
        android:layout_below="@+id/checkCommon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Partner1:"
        android:textColor="#646464"
        android:id="@+id/textPartner1"
        android:layout_below="@+id/textView"
        android:layout_marginTop="27dp"
        android:layout_centerHorizontal="true"
        />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="4"
        android:text="0"
        android:textAlignment="center"
        android:id="@+id/editPartner1"
        android:layout_below="@+id/textPartner1"
        android:layout_marginLeft="10dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Partner 2:"
        android:textColor="#646464"
        android:id="@+id/textPartner2"
        android:layout_below="@+id/editPartner1"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="4"
        android:text="0"
        android:textAlignment="center"
        android:id="@+id/editPartner2"
        android:layout_below="@+id/textPartner2"
        android:layout_marginLeft="10dp"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="ADD COUNTER"
        android:textColor="#fff"
        android:background="#FFBFDF"
        android:id="@+id/button"
        android:layout_below="@+id/editPartner2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:onClick="registerCounter"/>


</RelativeLayout>
